<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/ubuntu_medium"
                android:text="@string/today"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_28ssp"
                app:layout_constraintStart_toStartOf="@id/today"
                app:layout_constraintTop_toBottomOf="@id/today"/>
            <TextView
                android:id="@+id/date_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/ubuntu_regular"
                android:textColor="@color/textColorGray"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintStart_toStartOf="@id/city"
                app:layout_constraintTop_toBottomOf="@id/city"/>
            <ImageView
                android:id="@+id/weatherIcon_iv"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_40sdp"
                app:layout_constraintStart_toStartOf="@id/date_time_tv"
                app:layout_constraintTop_toBottomOf="@id/date_time_tv"/>
            <TextView
                android:id="@+id/temp_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:fontFamily="@font/ubuntu_light"
                android:text="20Â°C"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_40ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/weatherIcon_iv"/>
            <TextView
                android:id="@+id/desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/ubuntu_regular"
                android:textAlignment="center"
                android:textColor="@color/textColorGray"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintEnd_toEndOf="@id/temp_tv"
                app:layout_constraintTop_toBottomOf="@id/temp_tv"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/weatherIcon_iv">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/shape_weather_details"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="@string/wind"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_18ssp"/>
                        <TextView
                            android:id="@+id/wind_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@color/textColorGray"
                            android:textSize="@dimen/_36ssp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="@string/kmh"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_18ssp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/shape_weather_details"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="@string/humidity"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_18ssp"/>
                        <TextView
                            android:id="@+id/humidity_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@color/textColorGray"
                            android:textSize="@dimen/_36ssp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="@string/percentage"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_18ssp"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/shape_weather_details"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="@string/visibility"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_18ssp"/>
                        <TextView
                            android:id="@+id/visibility_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@color/textColorGray"
                            android:textSize="@dimen/_36ssp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="@string/km"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_18ssp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/shape_weather_details"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="@string/pressure"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_18ssp"/>
                        <TextView
                            android:id="@+id/pressure_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@color/textColorGray"
                            android:textSize="@dimen/_36ssp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="@string/hpa"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_18ssp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progress_bar_current"
        android:visibility="gone"
        android:background="@color/colorPrimaryVariant">
        <ProgressBar
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:indeterminateTint="@color/colorPrimary"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/no_net_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryVariant"
        android:visibility="gone">
        <TextView
            android:id="@+id/refresh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/ic_error_icon"
            android:drawableTint="@color/colorPrimary"
            android:text="@string/no_internet"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/refresh_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/refresh_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:text="Refresh"
            android:textColor="@color/off_white"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>